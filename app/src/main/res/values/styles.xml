<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fastScrollThumbDrawable">@drawable/scrollbar</item>
	</style>

	<style name="PreloaderTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:windowBackground">@drawable/loader</item>
	</style>

	<style name="FullImageScreen" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="ShareImageScreen" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="ImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="background">@color/colorPrimary</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="ToastStyle">
		<item name="stTextColor">@color/elementsColor</item>
		<item name="stColorBackground">@color/backgroundColor</item>
	</style>

	<style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert" />
</resources>